#include <DHT.h>
#include <LiquidCrystal.h>

int sensor = 2;
int temp, humedad;
int dt =500;

LiquidCrystal lcd(12,11,10,9,8,7);

DHT dht (sensor, DHT11);


void setup() {
  Serial.begin (9600);
  dht.begin();
   lcd.begin(16, 2);
}

void loop() {
 humedad = dht.readHumidity();
 temp= dht.readTemperature();
 String message= "temperatura: ";
 String message2= "grados: ";

  lcd.setCursor(0, 0);
  lcd.print(message);
  delay(500);
  lcd.print(temp);
  delay(500);
lcd.scrollDisplayLeft();
  lcd.setCursor(2,1);
  lcd.print(message2);
  delay(500);
  lcd.print(humedad);
  delay(500);
  

Serial.print("Temperatura; ");
Serial.print(temp);
Serial.print("Â°C humedad: ");
Serial.print(humedad);
Serial.print("%");

delay(dt);

}
