int Pin =A0;
int ledPin = 9;
int thresholdValue = 512;

void setup() {
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int potValue = analogRead(Pin);
  Serial.println(potValue);
  if (potValue > thresholdValue) {
    digitalWrite(ledPin, HIGH);
  } else {
    digitalWrite(ledPin, LOW);
  }
  
  delay(1000);
}
